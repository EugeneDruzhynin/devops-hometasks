Vagrant.configure("2") do |config|
    config.vm.box = "EugeneDruzhynin/hometasks"

    config.vm.network "forwarded_port", guest: 80, host: 8080
    config.vm.network "forwarded_port", guest: 81, host: 8081
  
    config.ssh.insert_key = false
    
    config.vm.provider "virtualbox" do |vb|
        vb.name =  "centos.vm"
    end
    
    config.vm.provision "shell", inline: <<-SHELL
        sh -c "echo 'Listen 81' >> /etc/httpd/conf/httpd.conf" #Adding 81 ports to httpd
        #File to port mapping: 
        sh -c "echo '<VirtualHost *:81>\nDocumentRoot /var/www/php\nCustomLog /var/log/httpd/example.com_access.log combined\nErrorLog /var/log/httpd/example.com_error.log\n</VirtualHost>' >> /etc/httpd/conf/httpd.conf"
        chmod -R o=rwx /var/www/    #Setting permissions for writing a file index.html
        mkdir /var/www/php/         
        chmod -R o+w /var/www/php/  #Setting permissions for writing a file index.php
        systemctl restart httpd
        firewall-cmd --permanent --add-port=81/tcp
        firewall-cmd --reload

    SHELL

    config.vm.provision "file", run: "always", source: "~/devops-hometasks/01-vagrant/index.html", destination: "/var/www/html/index.html"
    config.vm.provision "file", run: "always", source: "~/devops-hometasks/01-vagrant/index.php", destination: "/var/www/php/index.php"

end